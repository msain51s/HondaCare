<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_home"
    tools:context="com.intellinet.hondatwowheeler.activity.DealerInfoActivity"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="#99ffffff">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#d90000"
            android:elevation="4dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:scrollbars="none">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
    >
    <fragment
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

 <TextView
     android:id="@+id/dealerNameTextview"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:textColor="@color/black"
     android:textSize="18sp"
     android:layout_margin="10dp"
     />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_marginLeft="10dp"
     android:layout_marginRight="10dp">
 <ImageView
     android:layout_width="25dp"
     android:layout_height="25dp"
     android:layout_gravity="center_vertical"
     android:src="@drawable/ic_action_location"/>
 <TextView
     android:id="@+id/dealerAddressTextview"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10dp"
     android:textColor="@color/black"
     android:textSize="16sp"/>
 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_action_phone"/>
        <TextView
            android:id="@+id/dealerContactNoTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/uiColor"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_action_mail"/>
        <TextView
            android:id="@+id/dealerEmailAddressTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/uiColor"
            android:textSize="16sp"/>
    </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/open_close_layout_bg"
         android:orientation="vertical"
         android:layout_margin="10dp">

         <TextView
             android:id="@+id/open_hour_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_marginTop="10dp"
             android:text="Open Hours"
             android:textSize="17sp"
             android:textColor="@color/black"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp">

             <TextView
                 android:id="@+id/mondayText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:text="MON"
                 android:textColor="@color/black"/>
             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:singleLine="true"
                 android:text="....................................................................................."
                 android:textColor="@color/black"
                 android:layout_weight="1"/>
             <TextView
                 android:id="@+id/mondayTimeText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="10dp"
                 android:text="9:00am-7:00pm"
                 android:textSize="14sp"
                 android:textColor="@color/black"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp">

             <TextView
                 android:id="@+id/tuesdayText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:text="TUE"
                 android:textColor="@color/black"/>
             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:singleLine="true"
                 android:text="....................................................................................."
                 android:textColor="@color/black"
                 android:layout_weight="1"/>
             <TextView
                 android:id="@+id/tuesdayTimeText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="10dp"
                 android:text="9:00am-7:00pm"
                 android:textSize="14sp"
                 android:textColor="@color/black"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp">

             <TextView
                 android:id="@+id/wednesdayText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:text="WED"
                 android:textColor="@color/black"/>
             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:singleLine="true"
                 android:text="....................................................................................."
                 android:textColor="@color/black"
                 android:layout_weight="1"/>
             <TextView
                 android:id="@+id/wednesdayTimeText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="10dp"
                 android:text="9:00am-7:00pm"
                 android:textSize="14sp"
                 android:textColor="@color/black"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp">

             <TextView
                 android:id="@+id/thursdayText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:text="THUR"
                 android:textColor="@color/black"/>
             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:singleLine="true"
                 android:text="....................................................................................."
                 android:textColor="@color/black"
                 android:layout_weight="1"/>
             <TextView
                 android:id="@+id/thursdayTimeText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="10dp"
                 android:text="9:00am-7:00pm"
                 android:textSize="14sp"
                 android:textColor="@color/black"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp">

             <TextView
                 android:id="@+id/fridayText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:text="FRI"
                 android:textColor="@color/black"/>
             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:singleLine="true"
                 android:text="....................................................................................."
                 android:textColor="@color/black"
                 android:layout_weight="1"/>
             <TextView
                 android:id="@+id/fridayTimeText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="10dp"
                 android:text="9:00am-7:00pm"
                 android:textSize="14sp"
                 android:textColor="@color/black"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp">

             <TextView
                 android:id="@+id/saturdayText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:text="SAT"
                 android:textColor="@color/black"/>
             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:singleLine="true"
                 android:text="....................................................................................."
                 android:textColor="@color/black"
                 android:layout_weight="1"/>
             <TextView
                 android:id="@+id/saturdayTimeText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="10dp"
                 android:text="9:00am-7:00pm"
                 android:textSize="14sp"
                 android:textColor="@color/black"/>
         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="10dp">

             <TextView
                 android:id="@+id/sundayText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:text="SUN"
                 android:textColor="@color/black"/>
             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:singleLine="true"
                 android:text="....................................................................................."
                 android:textColor="@color/black"
                 android:layout_weight="1"/>
             <TextView
                 android:id="@+id/sundayTimeText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="10dp"
                 android:textSize="14sp"
                 android:text="Close"
                 android:textColor="@color/black"/>
         </LinearLayout>


     </LinearLayout>

 </LinearLayout>
 </ScrollView>
  </LinearLayout>
</LinearLayout>