<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/vinLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dip"
        app:cardElevation="4dp"
        android:layout_centerInParent="true"
        android:transitionName="vin"
        android:id="@+id/vinCard"
        android:layout_marginLeft="@dimen/layout_card_margin_left"
        android:layout_marginRight="@dimen/layout_card_margin_right">

    <ImageView
        android:id="@+id/vinImage"
        android:src="@drawable/vin_motorcycle"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
